    .card{background:rgba(255,255,255,0.02);padding:1rem;border-radius:10px}
    form{display:flex;flex-direction:column;gap:.5rem;max-width:600px}
    input,textarea{padding:.6rem;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:inherit}
    button{padding:.6rem 1rem;border-radius:8px;border:0;background:var(--accent);color:#03121e;cursor:pointer}
    .msg{min-height:1.4rem;color:#a8ffbf}
    /* Reveal animation */
    .reveal{opacity:0;transform:translateY(30px);transition:all 0.6s ease}
    .reveal.active{opacity:1;transform:translateY(0)}
  </style>
